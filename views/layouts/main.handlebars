<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: #333131;
    }

    .navbar {
        background-color: white !important;
    }
    .nav-logo {
        width: 400px;

    }
    .navbar-brand {}

    .navbar-brand h1 {
        color: black;
    }

    .jumbrotron {
        display: flex;
        justify-content: space-evenly;
        align-items: center;

        height: 700px;
    }

    .jumbrotron-text h2 {

        font-size: 52px;
        position: relative;
        bottom: 100px;
        color: white;
    }

    #login {
        position: relative;
        top: 80px;
    }

    .login-field {
        margin: 20px 0;
    }

    .card {
        padding-top: 70px;
        height: 400px;
        width: 350px;
        text-align: center;

    }

    .card-header {
        background-color: transparent !important;
        border-bottom: none !important;
        font-size: 35px;
        margin: 0;
        padding: 0;
        text-align: center;
    }

    #signupBtn {
        font-size: 10px;
        margin: 0px 5px;
        text-decoration: underline;
    }

    #loginInBtn {
        background-color: #793AA7;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 4px 12px;
    }

    #learnMoreBtn {
        background-color: transparent !important;
        padding: 4px 13px;
        border-radius: 5px;
        border: solid 3px white;
        color: white;

    }

    #learnMoreBtn a {
        color: white !important;
    }

    #exploreBtn a {
        color: white !important;

    }

    #exploreBtn {
        background-color: #793AA7 !important;
        padding: 4px 17px;
        border-radius: 5px;
        border: solid 3px #793AA7;
        color: white;
        position: relative;
        left: 50px;
        top: 40px;
    }

    .navbar-toggler {
        background-color: #793AA7;
    }

    .about-jumbotron {
        display: flex;
        flex-direction: column;
        align-items: center;
        align-content: center;

    }

    .about-jumbotron p {
        position: relative;
        top: 50px;
        width: 600px;
        color: white;
    }

    .aboutBtn-container {
        position: relative;
        top: 100px;
    }

    .about-wrapper {
        position: relative;
        top: 200px;
    }

    .about-wrapper h2 {
        color: white;
        position: relative;
        bottom: 60px;
        right: 80px;
        font-size: 60px;
    }

    .playlistheader {
        text-align: right;
        padding: 20px 40px;
        color: white;
    }

    .playlist-container ol li {
        color: white;
    }

    .album-row {
        display: flex;
        padding: 15px;
        overflow-y: hidden;
        overflow-x: scroll;
        height: 400px;
    }
    .album-row img {
        height: 300px;
        width: 300px;
        object-fit: contain;
        max-width: 400px;
        margin-right: 10px;
    }
    .album-text {
       color: #8a60a8;
       margin-left: 30px;
       margin-top: 10px;
   }
   .footer {
       background-color: #8a60a8;
       position:static;
       bottom:0;

   }
   .footer img {
        width: 400px;
   }
   .footer-logo {
       display: block;
       margin-left: auto;
       margin-right: auto;
       width: 50%;
   }
   
