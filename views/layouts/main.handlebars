        margin: 3px;
        cursor: pointer;
    }

    .popup_container {
        background-color: white !important;
        height: auto;
        width: 80%;
        display: none;
        margin: 0 auto;
    }
    .popup_wrapper {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }
    #viewAlbumcover {
        width: 200px;
        height: 200px;
        position: relative;
        bottom: 50px;
    }
    .album-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 50px;
    }
    #closeViewAblum {
        cursor: pointer;
        
    }

</style>

